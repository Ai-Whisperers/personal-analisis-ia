# Personal Comment Analyzer - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real keys!

# OpenAI Configuration (Optional - works with mock without this)
OPENAI_API_KEY=your_openai_api_key_here

# AI Engine Configuration
MODEL_NAME=gpt-4o-mini
MAX_BATCH_SIZE=100
MAX_TOKENS_PER_CALL=12000
MAX_WORKERS=12

# Language Support
SUPPORTED_LANGS=es,gn,en
DEFAULT_LANG=es

# Performance Settings  
PERFORMANCE_SLA_TARGET_SECONDS=10
PERFORMANCE_SLA_PERCENTILE=50

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Settings
DEBUG_MODE=false
MOCK_FALLBACK_ENABLED=true

# Security Settings
VALIDATE_INPUT=true
SANITIZE_OUTPUTS=true
MAX_COMMENT_LENGTH=10000